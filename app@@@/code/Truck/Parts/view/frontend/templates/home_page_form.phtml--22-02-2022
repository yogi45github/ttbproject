			<div class="part_search_input_wrapper row">
				<div class="part_search_input part_search_active">
					<input id="vin" type="radio" name="type" value="vin" class="part_search" checked>
					<label for="vin">Reg.nr sökning</label>
				</div> 
				<div class="part_search_input">
					<input id="oem" type="radio" name="type" value="oem" class="part_search">
					<label for="oem">Manuel sökning</label>
				</div>
				<div class="part_search_input">
					<input id="plate" type="radio" name="type" value="plate" class="part_search">
					<label for="plate">Sök på OEM-nummer</label>
				</div>
			</div>
			<div class="row">
				<div class="col-m-11 part_search_submit">
					<input type="text" name="search_input" id="search_input" placeholder="Sök på vin-nummer">
					<input id="search_part_button" type="submit" name="submit" value="Sök">
					<span id="search_input_error">this is a required field</span>
				</div>
