	//window.onload = function(){  
		// createCookie("welcome", "welcome786", 1);
		// var xx = document.cookie;
		// if (xx.includes('welcome')) {
		// 	alert('welcome back');
		// }
	//}  
	require(['jquery', 'jquery/ui'], function($){ 
	    $(document).ready(function(){
	     	$('#vehicle_search_form').submit(function(evt){
	     		evt.preventDefault()
	     		$('#search_input_error').hide();
	     		if($('#search_input').val() == ''){
	     			$('#search_input_error').show();
	     			return false;
	     		} else{
	     			if($('#vehicle_search_form input[name="type"]:checked').val() == 'oem'){
	     				window.location.href = '<?php  echo $this->getUrl('/'); ?>parts/vehicle/index?oem='+$('#search_input').val();
	     			} else if($('#vehicle_search_form input[name="type"]:checked').val() == 'vin'){
	     				window.location.href = '<?php  echo $this->getUrl('/'); ?>parts/vehicle/index?vin='+$('#search_input').val();
	     			} else {
	     				window.location.href = '<?php  echo $this->getUrl('/'); ?>parts/vehicle/index?plate='+$('#search_input').val();;
	     			}
	     		}
	     	});
			$(".part_search_input_wrapper :input").click(function () {
			    $(".part_search_input_wrapper :input").each(function() {
			      if ($(this).is(":checked")) {
			      	var placeholder_val = $(this).val();
			      	$("#search_input").attr("placeholder", "Sök på "+ placeholder_val +"-nummer");
			        $(this).parent().addClass('part_search_active');
			      } else {
			        $(this).parent().removeClass('part_search_active');
			      }
			    });
			});
	     	
	    });
	});
	var slideIndex = 0;
	showSlides();
	function showSlides() {
	  var i;
	  var slides = document.getElementsByClassName("mySlides");
	  var dots = document.getElementsByClassName("dot");
	  for (i = 0; i < slides.length; i++) {
	    slides[i].style.display = "none";  
	  }
	  slideIndex++;
	  if (slideIndex > slides.length) {slideIndex = 1}    
	  for (i = 0; i < dots.length; i++) {
	    dots[i].className = dots[i].className.replace(" active", "");
	  }
	  slides[slideIndex-1].style.display = "block";  
	  dots[slideIndex-1].className += " active";
	  setTimeout(showSlides, 2000); // Change image every 2 seconds
	}
</script>
<style type="text/css">
	#search_input_error{display: none;}
</style>