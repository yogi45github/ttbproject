<script type="text/javascript">
	// function createCookie(name,value,minutes) {
	//     if (minutes) {
	//         var date = new Date();
	//         date.setTime(date.getTime()+(minutes*1000));
	//         var expires = "; expires="+date.toGMTString();
	//     } else {
	//         var expires = "";
