<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <promopopup>
            <settings>
                <enabled>1</enabled>
                <modal_id>cpp</modal_id>
                <delay>30</delay>
                <limit>1</limit>
                <type>banner</type>
                <area>all</area>
                <scroll_count>10</scroll_count>
                <content><![CDATA[
<link rel="stylesheet" type="text/css" href="{{media url=promopopup/css/halloween/styles.css}}">
<div class="belvg-popup-halloween belvg-popup-halloween__theme1 belvg-popup-halloween__step1">
    <div class="belvg-popup-halloween__image">
        <img src="{{media url=promopopup/images/christmas/popup/1.png}}" alt="" />
    </div>
    <div class="belvg-popup-halloween__content">
        <div class="belvg-popup-halloween__title">Ready for Christmas?</div>
        <div class="belvg-popup-halloween__note">Get a magic promo code on your email!</div>
        <form class="form" id="cpp-form">
            <div class="belvg-popup-halloween__input">
                <input type="email" value="" placeholder="Your Email" />
            </div>
            <div  class="belvg-popup-halloween__actions">
                <button type="submit" class="action primary"><span>Subscribe</span></button>
            </div>
        </form>
    </div>
</div>
            ]]></content>
            </settings>
        </promopopup>
    </default>
</config>