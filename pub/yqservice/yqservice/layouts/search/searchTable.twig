{% use 'search/vinFrameSearch.twig' %}
{% use 'search/oemSearch.twig' %}
{% use 'search/plateSearch.twig' %}

{% block searchTable %}
    {% if not hideSearch %}
        {% spaceless %}
            {% set defaultSearchTypes = ['findByWizard2', 'findByWizard'] %}
            <div>
                <div class="search-table-wrapper">
                    <div class="tabs">
                        <div class="controls">
                            <button data-tab="#vin-frame-tab"
                                    class="response-data-link {{ ft == 'FindVehicle' or not ft or ft in defaultSearchTypes ? 'active' : '' }}">{{ 'searchbyvinframe'|t }}</button>
                            {% if applicability %}
                                <button data-tab="#oem-tab"
                                        class="response-data-link {{ ft == 'findByOEM' ? 'active' : '' }}">{{ 'searchbyoemtab'|t }}</button>
                            {% endif %}
                            {% if showFindPlate %}
                                <button data-tab="#plate-tab"
                                        class="response-data-link {{ ft == 'findByPlate' ? 'active' : '' }}">{{ 'searchbyplatetab'|t }}</button>
                            {% endif %}
                        </div>
                        <div class="content">
                            <div id="vin-frame-tab"
                                 class="tab {{ ft == 'FindVehicle' or not ft or ft in defaultSearchTypes ? 'active' : '' }}">
                                <div class="catalogs-search">
                                    {{ block('vinFrameSearch') }}
                                </div>
                            </div>
                            {% if applicability %}
                                <div id="oem-tab" class="tab {{ ft == 'findByOEM' ? 'active' : '' }}">
                                    <div class="catalogs-search">
                                        {{ block('oemSearch') }}
                                    </div>
                                </div>
                            {% endif %}
                            {% if showFindPlate %}
                                <div id="plate-tab" class="tab {{ ft == 'findByPlate' ? 'active' : '' }}">
                                    <div class="catalogs-search">
                                        {{ block('plateSearch') }}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endspaceless %}
    {% endif %}
{% endblock %}