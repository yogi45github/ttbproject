{% block vinSearch %}
    {% spaceless %}
        <h2>{{ 'searchbyvin'|t }}</h2>
        <span class="example gray">{{ 'inputvin'|t|replace({'%s': vinExample }) }}</span>
        <form name="findByVIN" onsubmit="checkVinValue(this.vin.value);return false;" id="findByVIN">

            <div id="VINInput" class="g_input">
                <input class="catalog_search_input" name="vin" type="text" id="vin" size="17" value=""/>
                <input type="submit" class="btn search" name="vinSubmit" value="" id="vinSubmit">
            </div>
            <input type="hidden" name="view" value="vehicles">
            <input type="hidden" name="ft" value="findByVIN">
        </form>
    {% endspaceless %}
{% endblock %}