    <div class="request_message {% if not requestOnly %}hidden{% endif %}">
        <div class="request_time">
            {{ 'REQUEST_TIME'|t|replace({'%time%' : this.request.requestTime|round(4) }) }}
        </div>
        {% for request in this.request.textRequests %}
            <div>
                <b>{{ loop.index }}:</b> {{ request }}
            </div>
        {% endfor %}
    </div>
    {% if not requestOnly %}
        {%- spaceless -%}
            <div class="response_message hidden">
                <code class="hljs xml">{{ response }}</code>
            </div>
        {% endspaceless %}
    {% endif %}
{% endif %}