{% use 'search/vinFrameSearch.twig' %}
{% use 'search/oemSearch.twig' %}

{% block searchTable %}
    {% spaceless %}
        <div>
            <div class="search-table-wrapper">
                <div class="tabs">
                    <div class="controls">
                        <button data-tab="#vin-frame-tab" class="response-data-link active">{{ 'searchbyvinframe'|t }}</button>
                        {% if applicability %}
                            <button data-tab="#oem-tab" class="response-data-link">{{ 'searchbyoemtab'|t }}</button>
                        {% endif %}
                    </div>
                    <div class="content">
                        <div id="vin-frame-tab" class="tab active">
                            <div class="catalogs-search">
                                {{ block('vinFrameSearch') }}
                            </div>
                        </div>
                        {% if applicability %}
                            <div id="oem-tab" class="tab">
                                <div class="catalogs-search">
                                    {{ block('oemSearch') }}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endblock %}