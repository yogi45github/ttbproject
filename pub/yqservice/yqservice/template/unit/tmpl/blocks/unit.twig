{% use 'blocks/unitHeader.twig' %}
{% use 'blocks/unitRemark.twig' %}
{% use 'blocks/image.twig' %}
{% use 'blocks/details.twig' %}
{% use 'blocks/legend.twig' %}

{% block unit %}
    <div class="unit_page">
        {{ block('unit_header') }}
        <div class="unit" id="g_container">
            {{ block('unit_remark') }}
            {% if unit.imageurl %}
                <div class="yqservice_unit_icons">
                    <div class="yqservice_zoom cboxElement"
                         full="{{ unit.imageurl|replace({'%size%': 'source'}) }}"
                         title="{{ unit.code }}: {{ unit.name }}">
                        <img src="yqservice/assets/images/zoom_{{ theme }}.png">
                    </div>
                </div>
            {% endif %}
            <div class="flex">
                {{ block('image') }}
                {{ block('details') }}
            </div>
            {{ block('legend') }}
        </div>
    </div>
{% endblock %}