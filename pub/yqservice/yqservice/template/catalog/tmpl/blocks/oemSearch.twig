{% block oemSearch %}
    {% spaceless %}
        <div class="find">
            <h2>{{ 'findApplicableVehicle'|t }}</h2>

            <span class="example gray">{{ 'findApplicableVehicleTip'|t }}</span>
            <form name="findByOEM" onsubmit="checkOem(this); return false;" id="findByOEM">

                <div id="OEMInput" class="g_input">
                    <input class="catalog_search_input" name="oem" type="text" id="OEM" size="17" value=""/>
                    <input type="submit" class="btn search" name="oemSubmit" value="" id="oemSubmit"/>
                </div>

                <input type="hidden" name="task" value="vehicles"/>
                <input type="hidden" name="ft" value="findByOEM"/>
                <input type="hidden" name="c" value="{{ cataloginfo.code }}"/>
            </form>
        </div>
    {% endspaceless %}
{% endblock %}