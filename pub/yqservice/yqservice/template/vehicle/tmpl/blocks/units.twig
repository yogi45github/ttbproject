{% use 'blocks/tooltips.twig' %}
{% block units %}
    <div class="float-unitlist">
        {% for unit in units %}
            {% set linkToUnit = createUrl('unit','','', {
            'c': vehicle.catalog,
            'vid': vehicle.vehicleid ?: 0,
            'uid': unit.unitid,
            'cid': cCid,
            'ssd': unit.ssd,
            'fromTask' : 'vehicle'
            }) %}


            {% set filterUrl = createUrl('unitfilter', '', '', {
            'c': cataloginfo.code,
            'vid': vehicle.vehicleid ?: 0,
            'uid': unit.unitid,
            'did': '',
            'cid': cCid,
            'f': unit.filter,
            'ssd': unit.ssd,
            'fromTask' : 'vehicle',
            'format': 'raw'
            }) %}

            <div class="yqservice_floatunitlist_box yqservice_floatunitlist_250 yqservice_floatunitlist_box"
                 note="{{ loop.index }}">
                <div class="yqservice_unit_icons">
                    {% if unit.filter != '' %}
                        <div {{ 'data-url=' ~ filterUrl }} class="yqservice_unit_filter filter">
                            <img src="yqservice/assets/images/filter.png">
                        </div>
                    {% endif %}
                    <div class="unitlist-zoom"
                         id="unitlist-zoom"
                            {{ unit.filter != '' ? 'data-filter-url="' ~ filterUrl ~ '"' }}
                         link="{{ linkToUnit }}"
                         full="{{ unit.largeimageurl|replace({'%size%': 'source'}) ~ '&iframe=true' }}"
                         title="{{ unit.code|noSpaces }}: {{ unit.name|upper }}">
                        <img src="yqservice/assets/images/zoom_{{ theme }}.png">
                    </div>
                </div>
                <div name="{{ unit.code|noSpaces }}" class="g_highlight"
                     onclick="{{ unit.filter != '' ? '' : 'window.location=\''~linkToUnit~'\'' }}"
                        {{ unit.filter != '' ? 'class=filter data-url=' ~ filterUrl }}>
                    <table class="yqservice_floatunitlist"
                           onclick={{ unit.filter != '' ? '' : 'window.location=\''~linkToUnit~'\'' }} border="0">
                        <tbody>
                        <tr>
                            <td class="yqservice_floatunitlist_image_{{ imageSize }}">
                                <img src="{{ unit.imageurl|replace({'%size%': imageSize}) }}">
                            </td>
                        </tr>
                        <tr>
                            <td class="yqservice_floatunitlist_title" id="unm{{ loop.index }}">
                                <div>
                                    {% if unit.filter != '' %}
                                        <a {{ 'data-url=' ~ filterUrl }} href="javascript:void(0)" class="orange filter">
                                            <b>{{ unit.code|noSpaces }}:</b>
                                            {{ unit.name|upper }}
                                        </a>
                                    {% else %}
                                        <a href="{{ linkToUnit }}">
                                            <b>{{ unit.code|noSpaces }}:</b>
                                            {{ unit.name|upper }}
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            {{ block('tooltips') }}
        {% endfor %}
    </div>
{% endblock %}